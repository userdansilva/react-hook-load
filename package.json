{
  "version": "1.0.7",
  "description": "It's a react hook that will help you to control your load states",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/userdansilva/react-hook-load.git"
  },
  "keywords": [
    "react",
    "hook",
    "load",
    "loading"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-hook-load",
  "author": "userdansilva",
  "module": "dist/react-hook-load.esm.js",
  "size-limit": [
    {
      "path": "dist/react-hook-load.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-hook-load.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "expect": "^27.5.1",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^3.9.10"
  }
}
